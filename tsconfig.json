{
  "compilerOptions": {
    "lib": ["es2015","es2016","es2017","es2018","es2019","es2020"],
    "strict": false,
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es2017",
    "outDir": "./dist",
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  },
  "exclude": ["node_modules"],
  "include": ["src/**/*"]
}